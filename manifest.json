{
  "name": "Beard Extension",
  "version": "0.0.1",
  "description": "La barbe !",
  "icons": {
    "19": "icons/icon-19.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
    },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    // "activeTab",
    // "https://beardy-website.herokuapp.com/",
    "tabs",
    // "webNavigation",
    "storage",
    "http://*/*",
    "https://*/*"
   ],
   "content_scripts": [
     {
       "matches":  ["*://*/*"],
       "css": ["css/styles.css"]
     },
     {
       "matches":  ["*://*/*"],
       "js": ["content.js"]
     }
  ],
  "optional_permissions": ["*://*/*"],
  "web_accessible_resources": [ "img/*.png" ],
  "manifest_version": 2

}